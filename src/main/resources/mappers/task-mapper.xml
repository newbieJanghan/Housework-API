<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.housework.model.task.TaskDao">
    <select id="selectOne" resultType="Task">
        SELECT *
        FROM tasks
        WHERE id = #{id}
    </select>

    <select id="selectAll" resultType="Task">
        SELECT *
        FROM tasks
    </select>

    <insert id="insert" parameterType="Task" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO tasks (family_id, housework_id, name, description, due_at)
        VALUES (#{familyId}, #{houseworkId}, #{name}, #{description}, #{dueAt})
    </insert>

    <update id="update" parameterType="Task">
        UPDATE tasks
        SET family_id    = #{familyId},
            housework_id = #{houseworkId},
            name         = #{name},
            description  = #{description},
            due_at       = #{dueAt}
        WHERE id = #{id}
    </update>

    <delete id="delete" parameterType="int">
        DELETE
        FROM tasks
        WHERE id = #{id}
    </delete>
</mapper>