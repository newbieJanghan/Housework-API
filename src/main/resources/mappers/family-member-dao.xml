<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.housework.model.familyMember.FamilyMemberDao">
    <resultMap id="FamilyMemberResultMap" type="FamilyMember">
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="familyId" column="family_id"/>
        <result property="role" column="role"/>
        <association property="user" javaType="User">
            <id property="id" column="user_id"/>
            <result property="name" column="user_name"/>
            <result property="email" column="user_email"/>
            <result property="password" column="user_password"/>
            <result property="houseId" column="user_house_id"/>
        </association>
        <collection property="tasks" ofType="Task">
            <id property="id" column="task_id"/>
            <result property="familyId" column="family_id"/>
            <result property="familyMemberId" column="family_member_id"/>
            <result property="houseworkId" column="housework_id"/>
            <result property="dueAt" column="due_at"/>
            <result property="doneAt" column="done_at"/>
        </collection>
    </resultMap>

    <select id="selectOne" resultMap="FamilyMemberResultMap">
        SELECT fm.*, u.id AS user_id, u.name AS user_name, u.email AS user_email, u.password AS user_password, u.house_id AS user_house_id,
               t.id AS task_id, t.family_id, t.family_member_id, t.housework_id, t.due_at, t.done_at
        FROM family_members fm
                 LEFT JOIN users u ON fm.user_id = u.id
                 LEFT JOIN tasks t ON fm.id = t.family_member_id
        WHERE fm.id = #{id}
    </select>

    <select id="selectAll" resultType="FamilyMember">
        SELECT * FROM family_members
    </select>

    <insert id="insert" parameterType="FamilyMember" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO family_members (user_id, family_id, role)
        VALUES (#{userId}, #{familyId}, #{role})
    </insert>

    <update id="update" parameterType="FamilyMember">
        UPDATE family_members
        SET user_id = #{userId}, family_id = #{familyId}, role = #{role}
        WHERE id = #{id}
    </update>

    <delete id="delete" parameterType="int">
        DELETE FROM family_members WHERE id = #{id}
    </delete>
</mapper>